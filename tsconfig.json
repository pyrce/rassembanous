{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "module": "CommonJS",
    "lib": [
      "es6",
      "dom.iterable",
      "dom"
    ],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "Core",
    "strict": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
      "ts-node": {
      "esm": true,
      "compilerOptions": {
        "module": "CommonJS"
      }
  },
  "include": [
    "Core/**/*"
  ],
  "exclude": [

  ]
}